{% extends 'base.html.twig' %}
    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('movies') }}
    {% endblock %}

{% block title %}List movies {% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div
                class="row">
            <!-- Bloc des genres à gauche -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h5>Filtrer par genres</h5>
                    </div>
                    <form name="search" id="genre-filter-form" action="{{ path('app_movie') }}" method="GET">
                        <ul class="list-group list-group-flush">
                            {% for key, genre in genres %}
                                <li class="list-group-item">
                                    <div class="form-check">
                                        <input class="form-check-input genre-checkbox" type="checkbox" name="genres[]" value="{{ key }}"
                                               id="genre-{{ key }}" {% if key in selected_genres %} checked {% endif %}>
                                        <label class="form-check-label" for="genre-{{ key }}">
                                            {{ genre }}
                                        </label>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-sm">Filtrer</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Liste des films -->
            <div
                    class="col-md-9">
                <!-- Nouveau bloc pour afficher le nombre de résultats -->
                <div class="mb-3">
                    <h4>{{ movies|length }}
                        /
                        {{ total_results }}
                        films</h4>
                </div>

                <div id="movies-container" class="row row-cols-1 g-4">
                    {% for movie in movies %}
                        <div class="col mb-4">
                            <div class="card movie-card">
                                <div
                                        class="card-body d-flex p-0">
                                    <!-- Conteneur de l'image avec taille fixe -->
                                    <div class="movie-poster" style="min-width: 180px; max-width: 180px;">
                                        <img src="https://image.tmdb.org/t/p/w500{{ movie.poster_path }}" alt="{{ movie.title }}"
                                             class="img-fluid" style="width: 180px; height: 270px; object-fit: cover;">
                                    </div>
                                    <!-- Conteneur du contenu avec padding -->
                                    <div class="movie-content p-3" style="flex: 1;">
                                        <h5 class="card-title">{{ movie.title }}

                                            <div class="rating-stars d-inline-block ms-2">
                                                {% set rating = movie.vote_average / 2 %}
                                             {% for i in 1..5 %}
                                                 {% if i <= rating %}
                                                     <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#e7e32a" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                         <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                                     </svg>

                                                 {% elseif (i - 0.5) <= rating %}
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#e7e32a" class="bi bi-star-half" viewBox="0 0 16 16">
                                                                <path d="M5.354 5.119 7.538.792A.52.52 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.54.54 0 0 1 16 6.32a.55.55 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.5.5 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.6.6 0 0 1 .085-.302.51.51 0 0 1 .37-.245zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.56.56 0 0 1 .162-.505l2.907-2.77-4.052-.576a.53.53 0 0 1-.393-.288L8.001 2.223 8 2.226z"/>
                                                            </svg>
                                                        {% else %}
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#e7e32a" class="bi bi-star" viewBox="0 0 16 16">
                                                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z"/>
                                                        </svg>
                                                 {% endif %}
                                             {% endfor %}
                                                <small class="text-muted ms-2">({{ movie.vote_count }} votes)</small>
                                            </div>
                                        </h5>

                                        <div class="movie-details">
                                            <p class="card-text description-text">{{ movie.overview }}</p>
                                            <div class="movie-metadata">
                                                <small class="text-muted d-block mb-2">{{ movie.release_date|date('Y') }}
                                                    -
                                                    <span class="text-primary">
														{% for genre in movie.genres %}
                                                            {{ genre }}
                                                            {% if not loop.last %},
                                                            {% endif %}
                                                        {% endfor %}

													</span>

                                                </small>
                                                <div class="text-end mt-2">
                                                    <a href="#" class="btn btn-primary btn-sm">Lire les détails</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
